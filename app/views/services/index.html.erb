<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Sub title</th>
    <th>Which is</th>
    <th>Who can use</th>
    <th>More info</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @services.each do |service| %>
    <tr>
      <td><%= service.title %></td>
      <td><%= service.sub_title %></td>
<!--              <td><%#= service.which_is %></td>-->
      <td>
        <div><%= render :inline => service.which_is %> </div>
      </td>
      <td><%= service.who_can_use %></td>
      <td><%= service.more_info %></td>
      <td><%= link_to 'Show', service %></td>
      <td><%= link_to 'Edit', edit_service_path(service) %></td>
      <td><%= link_to 'Destroy', service, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

